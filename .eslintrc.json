{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./src/ts/tsconfig.json"]
  },
  "ignorePatterns": ["**/usb_filtered.json"],
  "rules": {
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "default",
        "format": ["snake_case", "camelCase"]
      },
      {
        "selector": "typeLike",
        "format": ["PascalCase"]
      },
      {
        "selector": "property",
        "format": ["snake_case"],
        "modifiers": ["private"],
        "leadingUnderscore": "require"
      },
      {
        "selector": "function",
        "format": ["snake_case"]
      },
      {
        "selector": "objectLiteralProperty",
        "format": null
      }
    ]
  }
}
